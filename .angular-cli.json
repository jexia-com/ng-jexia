{
  "$schema": "./node_modules/@nrwl/schematics/src/schema.json",
  "project": {
    "name": "ng-jexia",
    "npmScope": "ngJexia",
    "latestMigration": "20180328-add-nx-lint"
  },
  "apps": [
    {
      "name": "example",
      "root": "apps/example/src",
      "outDir": "dist/apps/example",
      "assets": [
        "assets",
        "favicon.ico"
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "../../../test.js",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "../../../tsconfig.spec.json",
      "prefix": "app",
      "styles": [
        "styles.css"
      ],
      "scripts": [],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      },
      "tags": []
    },
    {
      "name": "ng-jexia",
      "root": "libs/ng-jexia/src",
      "test": "../../../test.js",
      "main": "index.ts",
      "appRoot": "",
      "tsconfig": "tsconfig.app.json",
      "tags": []
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "./tsconfig.spec.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "./apps/example/src/tsconfig.app.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "./apps/example/e2e/tsconfig.e2e.json",
      "exclude": "**/node_modules/**"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    },
    "codeCoverage": {
      "exclude": [
        "testUtils.ts"
      ]
    }
  },
  "defaults": {
    "schematics": {
      "collection": "@nrwl/schematics",
      "postGenerate": "npm run format",
      "newProject": [
        "app",
        "lib"
      ]
    },
    "styleExt": "css",
    "component": {}
  }
}

{
  "name": "ng-jexia",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng-packagr -p libs/ng-jexia/package.json",
    "test": "ng test",
    "lint": "./node_modules/.bin/nx lint && ng lint --type-check",
    "e2e": "ng e2e",
    "docs": "compodoc ./libs -n NgJexia -p ./tsconfig.json -d docs --theme 'gitbook' --disablePrivate --disableProtected --disableInternal --disableGraph",
    "docs:deploy": "ts-node tools/gh-pages-publish",
    "commit": "git-cz",
    "commitmsg": "validate-commit-msg",
    "affected:apps": "./node_modules/.bin/nx affected apps",
    "affected:build": "./node_modules/.bin/nx affected build",
    "affected:e2e": "./node_modules/.bin/nx affected e2e",
    "postinstall": "./node_modules/.bin/nx postinstall",
    "update": "./node_modules/.bin/nx update",
    "update:check": "./node_modules/.bin/nx update check",
    "update:skip": "./node_modules/.bin/nx update skip"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "author": "Jexia <community@jexia.com>",
  "contributors": [
    {
      "name": "William Grasel",
      "email": "d.ru.fo.s+github@gmail.com",
      "url": "https://twitter.com/willgmbr"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jexia/ng-jexia.git"
  },
  "dependencies": {
    "@angular-devkit/core": "^0.4.6",
    "@angular/animations": "5.2.9",
    "@angular/common": "5.2.9",
    "@angular/compiler": "5.2.9",
    "@angular/core": "5.2.9",
    "@angular/forms": "5.2.9",
    "@angular/http": "5.2.9",
    "@angular/platform-browser": "5.2.9",
    "@angular/platform-browser-dynamic": "5.2.9",
    "@angular/router": "5.2.9",
    "@ngrx/effects": "5.1.0",
    "@ngrx/router-store": "5.0.1",
    "@ngrx/store": "5.1.0",
    "@ngrx/store-devtools": "5.1.0",
    "@nrwl/nx": "*",
    "core-js": "^2.4.1",
    "jexia-sdk-js": "^3.2.5",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^5.5.6",
    "zone.js": "^0.8.19"
  },
  "devDependencies": {
    "@angular/cli": "1.7.1",
    "@angular/compiler-cli": "5.2.9",
    "@angular/language-service": "5.2.9",
    "@compodoc/compodoc": "^1.1.1",
    "@nrwl/schematics": "*",
    "@types/jasmine": "~2.5.53",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "codelyzer": "~3.1.1",
    "commitizen": "^2.9.6",
    "husky": "^0.14.3",
    "jasmine-core": "~2.8.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ng-packagr": "^2.2.0",
    "prettier": "1.10.2",
    "protractor": "~5.1.2",
    "shelljs": "^0.8.1",
    "ts-node": "^4.1.0",
    "tslint": "~5.9.1",
    "typescript": "2.6.2",
    "validate-commit-msg": "^2.14.0"
  }
}
